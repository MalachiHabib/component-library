{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*" ],
      "types/*": ["src/types/*"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}
